[module/tabs]
foreground = #dfdfdf
foreground-alt = #555
type = custom/script
exec = $SCRIPTS_HOME/tabs "#dfdfdf" "#7d7d7d"
interval = 0

[module/bat]
type = custom/script
exec = cat /sys/class/power_supply/BAT0/capacity
interval = 5
format-font = 2
format-underline = ${colors.underline-2}
format-prefix = "üîã "
format-suffix = "%"

[module/top-mem]
type = custom/script
exec = /usr/lib/i3blocks/top-mem
interval = 1
format-underline = ${colors.underline-2}
format-prefix = "mem: "

[module/top-cpu]
type = custom/script
exec = /usr/lib/i3blocks/top-cpu
interval = 1
format-underline = ${colors.underline-3}
format-prefix = "cpu: "

[module/temp]
type = custom/script
exec = /usr/lib/i3blocks/temp
interval = 25
format-underline = ${colors.underline-4}
format-prefix = "temp: "

[module/vol]
type = custom/script
exec = getvol
format-font = 0
interval = 1
format-underline = ${colors.underline-4}

[module/date]
type = custom/script
; exec = date -u '+%Y %b %d (%a) %H:%M'
exec = date -u '+%b %d (%a) %H:%M'
interval = 25
format-underline = ${colors.underline-7}

[module/date-external]
type = custom/script
exec = date -u '+%Y %b %d (%a) %H:%M'
interval = 25

[module/wttr]
type = custom/script
exec = weather
format-font = 1
format-underline = ${colors.underline-6}

[module/charging]
type = custom/script
exec = charging | sed 's/charging/‚ö°/g'
